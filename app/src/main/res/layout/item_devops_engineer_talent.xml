<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/item_devOpsEngineerHolder"
        android:orientation="vertical"
        android:layout_width="240dp"
        android:background="@drawable/item_bg"
        android:layout_marginEnd="12dp"
        android:layout_height="245dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:cardCornerRadius="10dp"
            android:elevation="12dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_devOpsEngineer_talent_image"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/kiryusento" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_devOpsEngineerTalentName"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensans"
            tools:context="Talent Name"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_devOpsEngineerTalentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans"
            tools:context="Talent Title"
            android:textSize="14sp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/devopsTalentSkill1"
                android:background="@color/primary"
                android:text="HTML"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="23dp"/>

            <TextView
                android:id="@+id/devopsTalentSkill2"
                android:layout_marginStart="8dp"
                android:background="@color/primary"
                android:text="Node js"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="23dp"/>

            <TextView
                android:id="@+id/devopsTalentSkill3"
                android:layout_marginStart="8dp"
                android:background="@color/primary"
                android:text="Python"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="23dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/talentSkillMore"
            android:text="2+"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</layout>
