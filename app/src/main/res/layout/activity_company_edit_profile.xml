<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".homepage.item.account.profile.CompanyEditProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/primary" />

            <TextView
                android:id="@+id/tv_arkhire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="Update Profile"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="591dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_editCompanyName"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="@string/edit_company_name"
                    android:textSize="14sp"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/et_editCompanyType"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:textSize="14sp"
                    android:hint="@string/edit_company_type"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/et_editCompanyDesc"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:textSize="14sp"
                    android:hint="Company description"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/et_editCompanyLinkedin"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="@string/id_linkedin_com_company"
                    android:padding="16dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_editCompanyInstagram"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="@string/www_instagram_com"
                    android:padding="16dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_editCompanyFacebook"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_border"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:hint="@string/web_facebook_com"
                    android:padding="16dp"
                    android:textSize="14sp" />


                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/editCompanyLocationmap"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_currentAddress"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <android.widget.Button
                    android:id="@+id/et_editCompanyLocation"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_bg"
                    android:drawablePadding="16dp"
                    android:hint="@string/update_location"
                    android:textSize="14sp" />


                <android.widget.Button
                    android:id="@+id/bt_newProfileDone"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/round_bg"
                    android:text="@string/done"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>



</layout>
