<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.item.ChatFragment">

    <ImageView
        android:id="@+id/iv_emptyChat"
        android:layout_width="114dp"
        android:layout_height="122dp"
        android:src="@drawable/notfound_chibi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_emptyChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Messages"
        android:textColor="#4E4E4E"
        android:textSize="14sp"
        android:fontFamily="@font/opensans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_emptyChat"
        app:layout_constraintStart_toStartOf="@+id/iv_emptyChat"
        app:layout_constraintTop_toBottomOf="@+id/iv_emptyChat"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>